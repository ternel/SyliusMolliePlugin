<?xml version="1.0" encoding="utf-8" ?>

<container xmlns="http://symfony.com/schema/dic/services" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>
        <defaults public="true" />
        <service id="bitbag_sylius_mollie_plugin.validator.mollie" class="BitBag\SyliusMolliePlugin\Validator\Constraints\CurrencyValidator">
            <tag name="validator.constraint_validator" alias="bitbag_sylius_mollie_plugin_currency"/>
        </service>
        <service id="bitbag_sylius_mollie_plugin.validator.constraits.payment_surcharge_type_validator" class="BitBag\SyliusMolliePlugin\Validator\Constraints\PaymentSurchargeTypeValidator">
            <tag name="validator.constraint_validator"/>
        </service>
        <service id="bitbag_sylius_mollie_plugin.validator.apple_pay_direct.apple_pay_address_validator" class="BitBag\SyliusMolliePlugin\Validator\ApplePayDirect\ApplePayAddressValidator" />
        <service id="bitbag_sylius_mollie_plugin.validator.apple_pay_direct.payment_method_checkout_validator" class="BitBag\SyliusMolliePlugin\Validator\Constraints\PaymentMethodCheckoutValidator">
            <tag name="validator.constraint_validator"/>
            <argument type="service" id="sylius.context.cart"/>
            <argument type="service" id="session"/>
        </service>
    </services>
</container>
